{
  "name": "ez-website",
  "version": "1.0.0",
  "description": "Eric Zimmerman's website",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "fetch": "npm run js:build && node cache-data.js",
    "build-website": "node build-website.js",
    "build-website:watch": "nodemon --delay 250ms --watch data/_cache-data-completed.txt --watch build-website.js --watch lib --watch css build-website.js",
    "watch": "concurrently --kill-others \"npm run js:watch\" \"npm run build-website:watch\" \"http-server -c-1 static\"",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "js:build": "tsc",
    "js:watch": "tsc --watch --preserveWatchOutput"
  },
  "author": "Atul Varma <varmaa@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@notionhq/client": "0.3.3",
    "@types/mime-types": "2.1.1",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "autoprefixer": "10.4.12",
    "dotenv": "12.0.4",
    "jimp": "0.16.1",
    "mime-types": "2.1.34",
    "postcss": "8.4.17",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "concurrently": "7.0.0",
    "http-server": "14.1.0",
    "nodemon": "2.0.15",
    "prettier": "2.5.1"
  }
}
